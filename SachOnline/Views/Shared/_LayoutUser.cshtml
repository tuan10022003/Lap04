<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" name="viewport" content="width=device-width initial-scale=1">
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/jquery-3.4.1.min.js"></script>

    <style type="text/css">
        .imgbook {
            transition: all 1s ease-in;
            width: 400px;
        }

            .imgbook:hover {
                transform: scale(0.9);
                cursor: pointer;
            }

        .imgsachbannhieu {
            width: 100px;
        }

        .size {
            width: 200px;
            height: 300px;
        }
        .s{
            padding-top : 20px;
        }
        .form-inline {
            display: flex;
        }

        .search-box {
            display: flex;
            align-items: center;
            /* Cách 2 */
            width: 100%;
        }
        .pagination {
            display: flex;
            justify-content: center;
            align-items: center;
            margin-top: 10px;
        }

            .pagination li {
                display: inline-flex;
                justify-content: center;
                align-items: center;
                width: 30px;
                height: 30px;
                text-align: center;
                background-color: #f0f0f0;
                border: 1px solid #ddd;
                margin-right: 1px;
            }

                .pagination li:hover {
                    background-color: skyblue;
                    color: white;
                    border-color: #ffd800;
                }

                .pagination li a {
                    display: block;
                    text-decoration: none;
                    width: 28px;
                    height: 28px;
                }
    </style>
    <title>@ViewBag.Title</title>
</head>
<body>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark">
        <div class="container">
            @Html.ActionLink("BOOKSTORE", "Index", "SachOnline", new { area = "" }, new { @class = "navbar-brand" })
            <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" title="Toggle navigation" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li>@Html.ActionLink("Trang chủ", "Index", "SachOnline", new { area = "" }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("Giới thiệu", "About", "SachOnline", new { area = "" }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("Liên hệ", "Contact", "SachOnline", new { area = "" }, new { @class = "nav-link" })</li>
                    
                </ul>
                <form class="form-inline my-2 my-lg-0 d-flex align-items-center">
                    <div class="search-box">
                        <input class="form-control mr-sm-5" type="text" placeholder="Tìm kiếm" aria-label="Tìm kiếm">
                        <button class="btn btn-outline-success my-2 my-md-2" type="submit">Search</button>
                    </div>
                </form>

                <ul class="navbar-nav">
                    <li>@Html.ActionLink("Đăng nhập", "DangNhap", "User", new { area = "" }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("Đăng ký", "DangKy", "User", null, new { @class = "nav-link" })</li>
                    <li>
                        @Html.Action("GioHangPartial","GioHang")
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container">
        <div class="row">
            <div class="col-lg-3 col-md-3 col-sm-3 col-xs-12">
                @Html.Action("ChuDePartial", "SachOnline")

                <div class="s">@Html.Action("NXBPartial", "SachOnline")</div>
            </div>
            <div class="col-lg-9 col-md-9 col-sm-9 col-xs-12">
                @RenderBody()
            </div>
        </div>
    </div>

    <nav class="text-center">
        <!-- Add class .pagination-lg for larger blocks or .pagination-sm for smaller blocks-->
        <ul class="pagination">
            <li> <a href="#" aria-label="Previous"> <span ariahidden="true">&laquo;</span> </a> </li>
            <li class="active"><a href="#">1</a></li>
            <li><a href="#">2</a></li>
            <li><a href="#">3</a></li>
            <li><a href="#">4</a></li>
            <li class="disabled"><a href="#">5</a></li>
            <li> <a href="#" aria-label="Next"> <span aria-hidden="true">&raquo;</span> </a> </li>
        </ul>
    </nav>
</body>

</html>